<div class="posts-container">
    <h2 class="posts-heading">최근 게시물</h2>
    <% if (data && data.length > 0) { %>
      <ul class="posts-list">
        <% data.forEach(post => { %>
          <li class="post-item">
            <a href="/post/<%= post._id %>" class="post-link">
              <div class="post-content">
                <span class="post-title"><%= post.title %></span>
                <span class="post-date"><%= post.createdAt ? new Date(post.createdAt).toLocaleDateString() : '날짜 없음' %></span>
              </div>
            </a>
          </li>
        <% }); %>
      </ul>
    <% } else { %>
      <p class="no-posts">게시물이 없습니다.</p>
    <% } %>
  </div>