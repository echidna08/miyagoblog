<div class="admin-container"></div>
    <h1 class="admin-heading">게시물 편집</h1>
    
    <form action="/admin/edit/<%= post._id %>" method="POST" class="admin-form">
        <div class="form-group">
            <label for="title" class="form-label">제목</label>
            <input type="text" id="title" name="title" required class="form-input" value="<%= post.title %>">
        </div>
        
        <div class="form-group">
            <label for="body" class="form-label">내용</label>
            <textarea id="body" name="body" required class="form-textarea"><%= post.body %></textarea>
        </div>
        
        <div class="form-actions">
            <button type="submit" class="admin-btn admin-btn-primary">수정 완료</button>
            <a href="/admin/allPosts" class="admin-btn">취소</a>
        </div>
    </form>
</div>